{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "lib": ["es2020"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        },
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "preserveSymlinks": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
